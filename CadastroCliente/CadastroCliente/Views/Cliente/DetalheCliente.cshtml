@model ClienteModel

@{
    Layout = "_Layout";
    var cliente = (ClienteModel) ViewBag.DetalheCLiente;
}

<h2>Detalhes do Cliente</h2>

<div class="container">
    <form asp-controller="Cliente" asp-action="ExcluirCLiente" asp-route-cliente="id" method="post" >
        <tbody>
        <div>
            Nome:
            <label>@cliente.Nome</label><br/>
            CEP:
            <label>@cliente.CEP</label><br/>
            Endereço:
            <label>@cliente.Endereco</label><br/>
            Bairro:
            <label>@cliente.Bairro</label><br/>
            Cidade:
            <label>@cliente.Cidade</label><br/>
            UF:
            <label>@cliente.Uf</label><br/>
            Status:
            <label>@cliente.Status</label><br/>
        </div>
        </tbody>
        <a asp-controller="Cliente" asp-action="ListaClientes" class="btn btn-primary" >Voltar</a>
        <button  type="submit" class="btn btn-sussec" > Excluir </button>
    </form>
</div>